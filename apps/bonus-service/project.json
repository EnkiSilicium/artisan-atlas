{
  "name": "bonus-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/bonus-service/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"],
        "cwd": "apps/bonus-service"
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        }
      }
    },
    "bundle": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": [
          "--node-env=development",
          "--config",
          "./webpack.bundle.config.js"
        ],
        "cwd": "apps/bonus-service",
        "target": "node"
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/bonus-service/package.json",
        "{workspaceRoot}/dist/apps/bonus-service/package-lock.json"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/apps/bonus-service/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "bonus-service:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "bonus-service:build:development"
        },
        "production": {
          "buildTarget": "bonus-service:build:production"
        }
      }
    },
    "test-entities": {
      "executor": "nx:run-commands",
      "options": {
        "env": { "JEST_ONLY": "entities" },
        "command": "node ./node_modules/jest/bin/jest.js --config apps/bonus-service/jest.config.ts --passWithNoTests",
        "cwd": "."
      }
    },

    "test-repos": {
      "executor": "nx:run-commands",
      "options": {
        "env": { "JEST_ONLY": "repos" },
        "command": "node ./node_modules/jest/bin/jest.js --config apps/bonus-service/jest.config.ts --passWithNoTests",
        "cwd": "."
      }
    }
  }
}
